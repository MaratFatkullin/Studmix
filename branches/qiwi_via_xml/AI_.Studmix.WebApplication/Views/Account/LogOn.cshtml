@using AI_.Studmix.WebApplication.ViewModels.Account
@model LogOnViewModel

@{
    ViewBag.Title = "Вход в систему";
}

<p>
    Пожалуйста, укажите свой логин и пароль. 
    <br/>
    Если вы еще не зарегистрированы на сайте, пройдите на страницу @Html.ActionLink("регистрации", "Register").
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Ошибка входа в систему.")

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>Информация о учетной записи</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>

            <p>
                <input type="submit" value="Войти" />
            </p>
        </fieldset>
    </div>
}
